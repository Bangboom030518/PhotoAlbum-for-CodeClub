{
    "database": {
        "rules": "database.rules.json"
    },
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint",
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
    },
    "hosting": {
        "public": "build/es5-bundled",
        "rewrites": [{
            "source": "**",
            "destination": "/index.html"
        }]
    },
    "storage": {
        "rules": "storage.rules"
    }
}